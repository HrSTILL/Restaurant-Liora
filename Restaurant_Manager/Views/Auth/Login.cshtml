@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}

@section Styles {
    <link rel="stylesheet" href="~/css/auth/login.css" asp-append-version="true" />
}
@* (EN) Login Page | (BG) Страница за вход *@
<div class="login-container">
    <div class="login-box">
        <h2 class="login-title">Login</h2>

        <form asp-action="Login" method="post" class="login-form">
            <input asp-for="Username" class="login-input" placeholder="Username" />
            <span asp-validation-for="Username"></span>

            <input asp-for="Password" class="login-input" type="password" placeholder="Password" />
            <span asp-validation-for="Password"></span>

            <button type="submit" class="login-btn">Login</button>
        </form>

        <div class="register-redirect">
            <p>Don't have an account?</p>
            <a href="/Auth/Register" class="login-btn">Register Here</a>
        </div>
    </div>
</div>

