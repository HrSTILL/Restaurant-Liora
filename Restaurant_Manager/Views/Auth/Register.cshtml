@model RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

@section Styles {
    <link rel="stylesheet" href="~/css/auth/register.css" asp-append-version="true" />
}
@* (EN) Register Page | (BG) Страница за регистрация *@
<div class="register-container">
    <div class="register-box">
        <h2 class="register-title">Register</h2>
        <form asp-action="Register" method="post" class="register-form">
            <input asp-for="Username" class="register-input" placeholder="Username" />
            <span asp-validation-for="Username" class="text-danger"></span>

            <input asp-for="Email" class="register-input" placeholder="Email" />
            <span asp-validation-for="Email" class="text-danger"></span>

            <input asp-for="FirstName" class="register-input" placeholder="First Name" />
            <span asp-validation-for="FirstName" class="text-danger"></span>

            <input asp-for="LastName" class="register-input" placeholder="Last Name" />
            <span asp-validation-for="LastName" class="text-danger"></span>

            <input asp-for="Phone" class="register-input" placeholder="Phone" />
            <span asp-validation-for="Phone" class="text-danger"></span>

            <input asp-for="Password" type="password" class="register-input" placeholder="Password" />
            <span asp-validation-for="Password" class="text-danger"></span>

            <input asp-for="ConfirmPassword" type="password" class="register-input" placeholder="Confirm Password" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>

            <button type="submit" class="register-btn">Register</button>
        </form>
    </div>
</div>

