@model List<Restaurant_Manager.ViewModels.StaffOrderUserViewModel>

@{
    ViewData["Title"] = "Staff Orders";
    Layout = "~/Views/Shared/_StaffLayout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/staff/staff-userlist.css" asp-append-version="true" />
}

@* (EN) Page for all users with active order | (BG) Страница за всички потребители с активна поръчка *@
<div class="staff-user-list">
    <h2>Staff Orders</h2>

    <table class="staff-table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>View Orders</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var user in Model)
                {
                    <tr>
                        <td>@user.FirstName @user.LastName</td>
                        <td>@user.Email</td>
                        <td>@user.Phone</td>
                        <td>
                            <a href="/Staff/StaffUserOrders/@user.UserId" class="view-button">View Orders</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="4" style="text-align:center; padding:20px;font-weight:bold;">No orders yet.</td>
                </tr>
            }
        </tbody>
    </table>
</div>

