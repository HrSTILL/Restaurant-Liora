@model List<Reservation>

<table class="reservation-table">
    <thead>
        <tr>
            <th>Table #</th>
            <th>People</th>
            <th>Time</th>
            <th>Duration</th>
            <th>Area</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var r in Model)
        {
            <tr>
                <td>@r.Table.TableNumber</td>
                <td>@r.NumberOfPeople</td>
                <td>@r.ReservationTime.ToString("g")</td>
                <td>@r.DurationType</td>
                <td>@r.SeatingArea</td>
                <td style="text-transform: capitalize;">@r.Status</td>
            </tr>
        }
    </tbody>
</table>
