<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Restaurant_Manager</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/home/homenavbar.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Restaurant_Manager.styles.css" asp-append-version="true" />
    @RenderSection("Styles", required: false)
</head>
<body>
    <header>
            <nav class="custom-navbar">
            <a asp-controller="Admin" asp-action="AdminDash" class="navbar-brand logo-link">
                <img src="~/Images/Liora_Logo_Cropped.png" alt="Logo" class="top-logo" />
            </a>
                <div class="nav-links d-flex align-items-center gap-3 ms-auto">
                <a href="/Admin/AdminMenu" class="shared-button-style">Menu</a>
                <a href="/Admin/AdminSpecialOffers" class="shared-button-style">Special Offers</a>
                <a href="/Admin/AdminOrders" class="shared-button-style">Orders</a>
                <a href="/Admin/AdminReservations" class="shared-button-style">Reservations</a>
                <a href="/Admin/AdminReports" class="shared-button-style">Reports</a>
                <a href="/Admin/ManageStaff" class="shared-button-style">Manage Staff</a>
                <a href="/Admin/ManageUsers" class="shared-button-style">Manage Users</a>
                <form asp-action="Logout" asp-controller="Auth" method="post" style="display:inline;">
                    <button type="submit" class="shared-button-style btn-nav">Logout</button>
                </form>
                </div>
            </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

   
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
