@model Restaurant_Manager.ViewModels.ChangePasswordViewModel
@{
    ViewData["Title"] = "Change Password";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/account/editprofile.css" />
}

<div class="edit-profile-container">
    <h2>Change Password</h2>
    <form asp-action="ChangePassword" method="post" class="edit-profile-form">
        <div class="form-group">
            <label for="OldPassword">Current Password</label>
            <input asp-for="OldPassword" class="form-control" type="password" />
        </div>
        <div class="form-group">
            <label for="NewPassword">New Password</label>
            <input asp-for="NewPassword" class="form-control" type="password" />
        </div>
        <div class="form-group">
            <label for="ConfirmPassword">Confirm Password</label>
            <input asp-for="ConfirmPassword" class="form-control" type="password" />
        </div>
        <button type="submit" class="save-btn">Update Password</button>
    </form>
</div>

@section Scripts {
    @if (TempData["Error"] != null)
    {
        <script>showToast("@TempData["Error"]");</script>
    }
    @if (TempData["Success"] != null)
    {
        <script>showToast("@TempData["Success"]");</script>
    }
}